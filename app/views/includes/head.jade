head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    
    title= appName+' - '+title
    meta(http-equiv='Content-type', content='text/html;charset=UTF-8')
    meta(name="keywords", content="twitter for pirates, twittarr, twitar, twittarrr, twittarrrr, talk like a pirate, tweet like a pirate")
    meta(name="description", content="Twittarr.com is a microblogging platform.  For pirates.  Tweet like a pirate.  Arrrrr.")


    //
        Opengraph tags
    meta(property='fb:app_id', content='151818621669296')
    meta(property='og:title', content='#{appName} - #{title}')
    meta(property='og:description', content='Twittarr.com is a microblogging platform.  For pirates.  Arr.')
    meta(property='og:type', content='website')
    meta(property='og:url', content='http://twittarr.com/')
    meta(property='og:image', content='http://twittarr.com/')
    meta(property='og:site_name', content='Twittarr: Microblogging. For pirates.')
    meta(property='fb:admins', content='')

    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css')


    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Berkshire+Swash', type='text/css')
    link(rel='stylesheet', href='/font/social-icons-lite/css/social-icons-lite.css', type='text/css')

    link(rel='stylesheet', href='/css/app.css')

    //
       HTML5 shim, for IE6-8 support of HTML5 elements
    //if lt IE 9
      script(src='/js/html5shiv.js')
    //
       Fav and touch icons
    link(rel='apple-touch-icon-precomposed', sizes='144x144', href='/img/apple-touch-icon-144-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='114x114', href='/img/apple-touch-icon-114-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='72x72', href='/img/apple-touch-icon-72-precomposed.png')
    link(rel='apple-touch-icon-precomposed', href='img/apple-touch-icon-57-precomposed.png')
    link(rel='shortcut icon', href='/img/favicon.png')
    script(type='text/javascript', src='js/nwitter.min.js')
    script(type='text/javascript', src='/js/jquery.min.js')
    script(type='text/javascript', src='/js/bootstrap.min.js')
    script(type='text/javascript', src='/js/scripts.js')
    script(type='text/javascript', src='/js/app.js')

